{
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": [
        "package.json",
        {
          "file": "pyproject.toml",
          "path": "tool.poetry.version"
        },
        {
          "file": "./saleor/__init__.py",
          "type": "text/plain"
        }
      ]
    }
  }
}
